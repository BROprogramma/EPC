    <xs:complexType name="CorrectionReasonType">
        <xs:simpleContent>
            <xs:restriction base="gml:CodeWithAuthorityType">
                <xs:attribute name="codeSpace"
                          type="xs:anyURI"
                          use="required"
                          fixed="urn:bro:epc:CorrectionReason"/>
            </xs:restriction>
        </xs:simpleContent>
    </xs:complexType>

